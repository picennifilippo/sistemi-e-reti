  ES 2 
  
  /*
dichiarare la variabile string
finche alla domanda che ci viene posta rispondiamo a s il progmramma continua a scrivere numeri
*/
import java.io.*;
class Numeri{
	public static void main(String args[]) throws IOException{
		int num1=1;
		String risp="s";
		InputStreamReader instream=new InputStreamReader (System.in);
		BufferedReader tastiera=new BufferedReader (instream);
		while(risp.equals("s")){
			System.out.println(num1);
			System.out.println ("vuoi continuare");
			risp=tastiera.readLine();
			num1++;
		}
	}
}

ES 3

/*
dichiarare una variabile
utilizzando il while inserire i numeri pari compresi tra 1 e 23
*/
import java.io.*;
class Pari{
	public static void main(String args[]) throws IOException{
		int num1=1;
		String comodo;
		InputStreamReader instream=new InputStreamReader (System.in);
		BufferedReader tastiera=new BufferedReader (instream);
		while(num1<23){
			num1++;
			if (num1%2==0){
				System.out.println(num1);
			}
			num1++;
		}
		
	}
}
