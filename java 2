/*dichiarare tre numeri in input
stabilire con la funzione if quale dei tre numeri è maggiore
*/
import java.io.*;
class Maggiore{
	public static void main(String args[]) throws IOException{
		int num1,num2,num3;
		String comodo;
		InputStreamReader instream=new InputStreamReader (System.in);
		BufferedReader tastiera=new BufferedReader (instream);
		System.out.println ("inserire il primo numero");
		comodo=tastiera.readLine();
		num1=Integer.parseInt (comodo);
		System.out.println ("inserire il secondo numero");
		comodo=tastiera.readLine();
		num2=Integer.parseInt (comodo);
		System.out.println ("inserire il terzo numero");
		comodo=tastiera.readLine();
		num3=Integer.parseInt (comodo);
	   if (num1>num2 && num1>num3){
		   System.out.println("il numero maggiore e' il primo");
	   }if (num2>num1 && num2>num3){
		   System.out.println("il numero maggiore e' il secondo");
	   }if (num3>num1 && num3>num2){
		   System.out.println("il numero maggiore e' il terzo");
	   }
}
}
		/*if (num1>num2){
